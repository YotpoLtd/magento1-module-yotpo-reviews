<?xml version="1.0"?>

<config>
    <modules>
        <Yotpo_Yotpo>
            <version>0.0.1</version>
        </Yotpo_Yotpo>
    </modules>
    
    <global>
    	<blocks>
    		<yotpo>
	    		<class>Yotpo_Yotpo_Block</class>
    		</yotpo>
    	</blocks>
    	<models>
    		<yotpoyotpo>
    			<class>Yotpo_Yotpo_Model</class>
    		</yotpoyotpo>
    	</models>
        <helpers>
            <yotpo>
                <class>Yotpo_Yotpo_Helper</class>
            </yotpo>
        </helpers>
    	<events>
			<sales_order_save_after>
			  <observers>
			  	  <yotpo_yotpo_mail_observer>
			  	  	  <type>singleton</type>
			          <class>Yotpo_Yotpo_Model_Mail_Observer</class>
			          <method>mail_after_purchase</method>
			      </yotpo_yotpo_mail_observer>
			  </observers>
			</sales_order_save_after>
      	</events>
    </global>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Yotpo_Yotpo before="Mage_Adminhtml">Yotpo_Yotpo</Yotpo_Yotpo>
                    </modules>
                </args>
            </adminhtml>
        </routers>    
    </admin>

	<frontend>
		<layout>
			<updates>
				<yotpo>
					<file>yotpo.xml</file>
				</yotpo>
			</updates>
		</layout>
	</frontend>
	
	<adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <yotpo_block_abstract_prepare_layout_before>
                        <class>Yotpo_Yotpo_Model_Export_Observer</class>
                        <method>addMassAction</method>
                    </yotpo_block_abstract_prepare_layout_before>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>

        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <yotpo>
                                            <title>Yotpo Module Section</title>
                                        </yotpo>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
